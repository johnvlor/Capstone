
@{
    ViewBag.Title = "PayPal";
}

@using System.Configuration

<h2>Make a Gift Online</h2>
<br />

<form method="post" action="@ConfigurationManager.AppSettings["PayPalSubmitUrl"]"  target="_top">
    <input type="hidden" name="upload" value="1">
    <input type="hidden" name="return" value="@ConfigurationManager.AppSettings["returnurl"]">
    <input type="hidden" name="cmd" value="_s-xclick">
    <input type="hidden" name="hosted_button_id" value="W5P8DH5TJ45KE">
    @*<input type="hidden" name="business" value="@ConfigurationManager.AppSettings["PayPalUsername"]">*@
    <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
    <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>