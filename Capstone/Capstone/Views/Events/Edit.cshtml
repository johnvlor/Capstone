<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $('.date-time-dropdown').datetimepicker({
        step: 15
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
